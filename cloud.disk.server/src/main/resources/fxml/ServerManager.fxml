<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="8.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ServerManagerController">
    <children>
        <HBox prefWidth="200.0" VBox.vgrow="NEVER">
            <children>
                <VBox prefWidth="100.0" spacing="8.0" HBox.hgrow="NEVER">
                    <children>
                        <Label prefHeight="25.0" text="Storage path:" />
                        <Label prefHeight="25.0" text="Port:" />
                    </children>
                </VBox>
                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox spacing="8.0" VBox.vgrow="NEVER">
                            <children>
                                <TextField fx:id="storagePath" prefHeight="25.0" HBox.hgrow="ALWAYS" />
                                <Button fx:id="selectDirectory" mnemonicParsing="false" onAction="#handleSelectDirectory" text="Select" />
                            </children>
                        </HBox>
                        <TextField fx:id="port" alignment="TOP_RIGHT" maxWidth="-Infinity" prefHeight="25.0" prefWidth="50.0" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox VBox.vgrow="NEVER">
            <children>
                <Button fx:id="startServer" mnemonicParsing="false" onAction="#handleStartServer" text="Start" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>
</VBox>
